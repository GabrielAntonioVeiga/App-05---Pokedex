<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1976D2">

    <LinearLayout
        android:orientation="vertical"
        android:padding="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- HEADER -->
        <TextView
            android:id="@+id/tvDashboardTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Pokédex Dashboard"
            android:textSize="22sp"
            android:textColor="#FFFFFF"
            android:gravity="center"
            android:padding="16dp"
            android:background="#D32F2F"
            android:elevation="6dp"
            android:layout_marginBottom="20dp"
            android:letterSpacing="0.05" />

        <!-- TOTAL POKEMONS -->
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:background="#FBC02D"
            android:layout_marginBottom="20dp"
            android:gravity="center"
            android:elevation="4dp"
            android:layout_margin="8dp"
            android:radius="16dp">

            <TextView
                android:id="@+id/tvTotalPokemons"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textColor="#212121"
                android:textSize="48sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pokémons cadastrados"
                android:textColor="#212121"
                android:textSize="12sp" />
        </LinearLayout>

        <!-- TOP 3 TIPOS -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Top 3 Tipos"
            android:textColor="#ffffff"
            android:textSize="16sp"
            android:layout_marginBottom="10dp"/>

        <LinearLayout
            android:id="@+id/containerTopTipos"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#D32F2F"
            android:padding="16dp"
            android:layout_marginBottom="20dp"
            android:elevation="3dp"/>

        <!-- TOP 3 HABILIDADES -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Top 3 Habilidades"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:layout_marginBottom="10dp"/>

        <LinearLayout
            android:id="@+id/containerTopHabilidades"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#D32F2F"
            android:padding="16dp"
            android:elevation="3dp"/>

    </LinearLayout>

</ScrollView>
